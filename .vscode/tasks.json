{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build rp2040",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--bin",
                "rp2040",
                "--target",
                "thumbv6m-none-eabi"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$rustc"
        },
        {
            "label": "cargo build wasm",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--bin",
                "wasm",
                "--target",
                "wasm32-unknown-unknown"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$rustc"
        },
    ]
}